@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<canvas id="myCanvas" width="600" height="600" style="border:1px solid green"></canvas>



<script>
    var canvas = document.getElementById('myCanvas');
    var ctx = canvas.getContext("2d");

    var blockSize = 300;
    var blocks =[['green', 'yellow'],['red', 'blue']];

    for (var i = 0; i < blocks.length; i++)
        for (var j = 0; j < blocks.length; j++)
        {
            ctx.fillStyle = blocks[i][j];
            ctx.fillRect(0 + i * blockSize, 0 + j * blockSize, blockSize, blockSize);
        }

    ctx.fillStyle = 'purple';
    ctx.beginPath();
    ctx.moveTo(0, 0);
    ctx.lineTo(blockSize, 0);
    ctx.lineTo(0, blockSize);
    ctx.fill();
</script>